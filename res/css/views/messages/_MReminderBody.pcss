.mx_MReminderBody {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
}

.mx_MReminderBody_summary {
    color: var(--timeline-text-color);
    line-height: 1.5;
}

.mx_MReminderBody_button {
    margin-top: 4px;
    padding: 6px 12px;
    font-size: 13px;
    line-height: 18px;
    margin-bottom: 10px;
}

.mx_MReminderBody_fallback {
    color: var(--timeline-text-color);
}
